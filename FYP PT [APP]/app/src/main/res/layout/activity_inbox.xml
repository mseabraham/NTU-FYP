<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InboxActivity"
    android:background="#1282A2">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/brLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.InboxTheme"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rycInbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/brLayout"
        android:layout_margin="15dp"
        android:background="@drawable/bdr_inbox"/>

</RelativeLayout>