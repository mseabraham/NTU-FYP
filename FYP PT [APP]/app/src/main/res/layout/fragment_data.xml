<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerFragment.DataFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#17183B">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rycData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnAddSet"/>
        <Button
            android:id="@+id/btnAddSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="+ Add New Set"
            android:textColor="#FF4F79"
            android:textStyle="bold"
            android:layout_above="@+id/btnLog"/>
        <Button
            android:id="@+id/btnLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Log Exercise"
            android:textColor="#FF4F79"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>